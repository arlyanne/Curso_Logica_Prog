package fundamentos;

import java.util.Scanner;

public class Console {

	public static void main(String[] args) {
		
		System.out.print("Bom");
		System.out.print(" dia.\n");
		// print mantem tudo na mesma linha
		
	
		System.out.println("Bom ");
		System.out.println("dia");
		// println  imprime e quebra a linha
		
		
		System.out.printf("Números Megasena: %d %d %d %d %d %d %n", 1, 2, 3, 4, 5, 6);
		System.out.printf("Salário: R$%1f%n", 1234.56);
		// printf consegue definir string formatada e depois substitui
		
		
		
		/* %n quebra de linha
		 * %s - sao para strings
		 * %d - sao para valores inteiro (int, shor, byte)
		 * %f - sao para valores flutuantes (double ou float) 
		 * \n - usado para quebrar linha
		 * "print" - mantem tudo na mesma linha
		 * "println" - imprime e quebra a linha
		 * "printf" consegue definir string formatada e depois substitui
		 */
		
		Scanner entrada = new Scanner(System.in); 
		
		System.out.print("Digite seu nome:");
		String nome = entrada.nextLine();
		
		System.out.print("Digite seu sobrenome:");
		String sobrenome = entrada.nextLine();
		
		System.out.print("Digite sua idade:");
		int idade = entrada.nextInt();
		
		//System.out.print("\n\nNome:"+ nome + " " + sobrenome + " Idade: " + idade + " anos.");
		
		System.out.printf("%s %s tem %d", nome, sobrenome, idade);
		
		
		
		
		

	}
}

