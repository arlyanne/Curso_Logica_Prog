package fundamentos;

public class NotacaoPonto {

	public static void main(String[] args) {
		
		double a = 2.3;
		String s = "Bom dia X";
		s = s.replace("X", "Flamenguista"); // ele atribui ao primieiro "X" trocando para a palavra que se coloca na segunda.
		s = s.toUpperCase(); // quando se atribui a parte " .toUpperCase();" em qualquer variavel que quiser a letra ou frase passar a ser toda em maiuscula.
		s = s.concat("!!!"); // ele apenas concatena o que se quer dizer ao resto da frase que pos acima.
		
	    System.out.println(s);
		
	    
	    // ou posso logo atribuir as funcoes dentro do "system.out.println();" conforme abaixo
	    
	    System.out.println("Arlyanne ".toUpperCase());

	}

}
